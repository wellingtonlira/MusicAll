<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/black"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    tools:context=".fragments.MedalsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".Medalhas">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/trofeu" />

            <TextView
                android:id="@+id/medalhas_titulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:paddingLeft="10dp"
                android:text="Medalhas MusicAll"
                android:textColor="@color/white"
                android:textSize="20sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/txt_niveis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Níveis de medalhas:"
            android:layout_marginTop="15dp"
            android:paddingLeft="20dp"
            android:textColor="@color/white"
            android:textSize="17sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ini"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/ini" />

            <TextView
                android:id="@+id/txt_ini"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Iniciante"
                android:textColor="@color/white"
                android:textSize="17sp" />

            <ImageView
                android:id="@+id/profi"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                android:paddingLeft="20dp"
                android:src="@drawable/profi" />

            <TextView
                android:id="@+id/txt_profi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Profissional"
                android:textColor="@color/white"
                android:textSize="17sp" />

            <ImageView
                android:id="@+id/rock"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginTop="4dp"
                android:paddingLeft="15dp"
                android:src="@drawable/rock" />

            <TextView
                android:id="@+id/txt_rock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Rockstar"
                android:textColor="@color/white"
                android:textSize="17sp" />

        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="495dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/card_profile">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="20dp"
                android:columnCount="2"
                android:rowCount="2">

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_medalha1"
                    android:layout_width="170dp"
                    android:layout_height="165dp"
                    app:cardPreventCornerOverlap="false"
                    app:cardBackgroundColor="#171717">

                    <ImageView
                        android:id="@+id/img_harmonia"
                        android:layout_width="match_parent"
                        android:layout_height="165dp"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/img_harmonia" />

                    <TextView
                        android:id="@+id/txt_harmonia1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="50dp"
                        android:layout_gravity="center_horizontal"
                        android:textStyle="bold"
                        android:text="Harmonia"
                        android:textColor="@color/white"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/tv_harmonia_texto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="75dp"
                        android:text="Informar todos os dados durante o cadastro"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_harmonia_dica"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="120dp"
                        android:layout_gravity="center_horizontal"
                        android:text="Nível máximo atingido"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/iv_harmonia"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="40dp"
                        android:src="@drawable/rock" />

                    <TextView
                        android:id="@+id/tv_harmonia_nivel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:text="------------------"
                        android:paddingLeft="60dp"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_medalha2"
                    android:layout_width="170dp"
                    android:layout_height="165dp"
                    app:cardPreventCornerOverlap="false"
                    app:cardBackgroundColor="#171717"
                    android:layout_gravity="right"
                    app:cardCornerRadius="5dp">

                    <ImageView
                        android:id="@+id/img_music"
                        android:layout_width="match_parent"
                        android:layout_height="165dp"
                        android:layout_marginTop="10dp"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/img_musicista"/>


                    <TextView
                        android:id="@+id/txt_music1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="50dp"
                        android:layout_gravity="center_horizontal"
                        android:textStyle="bold"
                        android:text="Musicista"
                        android:textColor="@color/white"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/tv_music_texto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="75dp"
                        android:text="Mais de 10 publicações na plataforma"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_music_dica"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="120dp"
                        android:layout_gravity="center_horizontal"
                        android:text="Troféu pode ser upado!"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="14sp" />


                    <ImageView
                        android:id="@+id/iv_music"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="40dp"
                        android:src="@drawable/profi" />

                    <TextView
                        android:id="@+id/tv_music_nivel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:text="------------------"
                        android:paddingLeft="60dp"
                        android:textColor="@color/white"
                        android:textSize="14sp" />



                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_medalha3"
                    android:layout_width="170dp"
                    android:layout_height="165dp"
                    android:layout_marginTop="70dp"
                    app:cardPreventCornerOverlap="false"
                    app:cardBackgroundColor="#171717"
                    app:cardCornerRadius="8dp">

                    <ImageView
                        android:id="@+id/img_melodia"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/img_melodia" />

                    <TextView
                        android:id="@+id/txt_melodia1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="50dp"
                        android:layout_gravity="center_horizontal"
                        android:textStyle="bold"
                        android:text="Gostou da melodia"
                        android:textColor="@color/white"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/tv_melodia_texto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="75dp"
                        android:text="Permaneceu por mais de 24 horas na plataforma"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_melodia_dica"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="120dp"
                        android:layout_gravity="center_horizontal"
                        android:text="Troféu pode ser upado!"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/iv_melodia"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="40dp"
                        android:src="@drawable/profi" />

                    <TextView
                        android:id="@+id/tv_melodia_nivel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:text="------------------"
                        android:paddingLeft="60dp"
                        android:textColor="@color/white"
                        android:textSize="14sp" />


                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/card_medalha4"
                    android:layout_width="170dp"
                    android:layout_height="165dp"
                    app:cardPreventCornerOverlap="false"
                    app:cardBackgroundColor="#171717"
                    android:layout_marginTop="70dp"
                    android:layout_gravity="right"
                    app:cardCornerRadius="5dp">

                    <ImageView
                        android:id="@+id/img_ritmo"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/img_ritmo" />

                    <TextView
                        android:id="@+id/txt_ritmo1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="50dp"
                        android:layout_gravity="center_horizontal"
                        android:textStyle="bold"
                        android:text="Dentro do ritmo"
                        android:textColor="@color/white"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/tv_ritmo_texto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="75dp"
                        android:text="Procure por músicos com a mesma batida"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="14sp" />


                    <TextView
                        android:id="@+id/tv_ritmo_dica"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="120dp"
                        android:layout_gravity="center_horizontal"
                        android:text="Nível máximo atingido"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/iv_ritmo"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="40dp"
                        android:src="@drawable/rock" />

                    <TextView
                        android:id="@+id/tv_ritmo_nivel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:text="------------------"
                        android:paddingLeft="60dp"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                </androidx.cardview.widget.CardView>


            </GridLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>
</FrameLayout>