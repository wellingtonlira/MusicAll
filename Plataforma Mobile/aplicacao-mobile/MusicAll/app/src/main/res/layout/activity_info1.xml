<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="40dp"
    android:paddingRight="40dp"
    android:orientation="vertical"
    android:background="@color/black"
    tools:context=".ScreenInfo1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="19dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_titulo1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="100dp"
            android:text="Quase lá..."
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold"

            />

        <TextView
            android:id="@+id/tv_infoGenero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:text="Qual seu gênero musical preferido? "
            android:textColor="@color/white"
            android:textSize="18sp"

            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">


            <Spinner
                android:id="@+id/sp_spinner1"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:entries="@array/array_genero"/>

        </LinearLayout>

        <View
            android:layout_width="280dp"
            android:layout_height="1dp"
            android:background="@color/white"/>

        <TextView
            android:id="@+id/tv_infoInstrumento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:text="Qual instrumento você é um rockstar?"
            android:textColor="@color/white"
            android:textSize="18sp"

            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">


            <Spinner
                android:id="@+id/sp_spinner2"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:entries="@array/array_instrumento"/>

        </LinearLayout>

        <View
            android:layout_width="280dp"
            android:layout_height="1dp"
            android:background="@color/white"/>

        <Button
            android:id="@+id/bt_continuar1"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:background="@drawable/button_next"
            android:onClick="irInfo2"
            android:text="Continuar"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="15sp" />

    </LinearLayout>
</RelativeLayout>