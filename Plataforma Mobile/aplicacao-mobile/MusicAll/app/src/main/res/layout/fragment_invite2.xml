<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".fragments.InviteRecebidoFragment">





    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/invite1"
        >

        <ImageView
            android:layout_width="58dp"
            android:layout_height="55dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/ic_profile_pic" />

        <TextView
            android:id="@+id/tv_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mari - Vocalista - 20 anos - SP | Estilo Musical - Indie"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:paddingLeft="80dp"
            android:layout_marginTop="40dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_recebidos_status"
            android:text="Status: "
            android:textColor="@color/white"
            android:textSize="18sp"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginTop="100dp"
            android:visibility="visible"/>

        <RelativeLayout
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:id="@+id/rl_recebidos"
            android:layout_below="@id/tv_recebidos_status">

            <TextView
                android:id="@+id/tv_aceitar"
                android:layout_width="125dp"
                android:layout_height="25dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:background="@drawable/button_registrar"
                android:text="Aceitar"
                android:textAllCaps="false"
                android:layout_alignParentLeft="true"
                android:textColor="@color/white"
                android:textSize="18sp"
                />

            <TextView
                android:id="@+id/tv_recusar"
                android:layout_width="125dp"
                android:layout_height="25dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_login"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:text="Recusar"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="18sp"
                />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/rl_recebidos"
            android:layout_marginTop="15dp"
            android:background="@android:color/darker_gray"/>


    </RelativeLayout>

</FrameLayout>
